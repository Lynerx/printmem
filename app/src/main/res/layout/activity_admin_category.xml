<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.printmem.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:textColor="@color/colorPrimary"
        android:text="Choose a category:"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frames"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#000"
            />
        <ImageView
            android:id="@+id/frames"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/frames"
            android:layout_marginTop="10dp"
            android:layout_marginVertical="6dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albums"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#000"
            />
        <ImageView
            android:id="@+id/albums"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/albums"
            android:scaleType="centerCrop"
            android:layout_marginVertical="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Big Posters"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#000"
            />
        <ImageView
            android:id="@+id/big_posters"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/big_posters"
            android:layout_marginVertical="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envelops"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#000"
            />
        <ImageView
            android:id="@+id/envelops"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/envelop"
            android:scaleType="centerCrop"
            android:layout_marginVertical="6dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/all_products"
        android:background="@drawable/input_design"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="15dp"
        android:text="See All Products"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/logout"
        android:background="@drawable/buttons"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="LOGOUT"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
